        function getPseudoSign(seedStr, offset) {
            let hash = 0;
            for (let i = 0; i < seedStr.length; i++) {
                hash = seedStr.charCodeAt(i) + ((hash << 5) - hash);
            }
            // åŠ ä¸Šåç§»é‡ç¡®ä¿æœˆäº®å’Œä¸Šå‡ä¸å®Œå…¨ä¸€æ ·
            const index = Math.abs(hash + offset) % 12; 
            return zodiacSigns[index].name;
